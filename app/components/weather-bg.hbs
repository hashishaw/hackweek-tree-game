<div>
  <div class='scene'>
    <div class='weather-box {{if @running 'running' 'paused'}}'>
      <div
        class='tree-icon'
        style='font-size: {{@game.tree.displayHeight}};'
      >ðŸŒ³</div>
    </div>
    <div class='ground-box {{if @running 'running' 'paused'}}'>
      <div class='tree-stats'>
        <h5>Tree stats</h5>
        <ul>
          <li>Species: <strong>{{@game.tree.species}}</strong></li>
          <li>Status: <strong>{{@game.tree.status}}</strong></li>
        </ul>

        <ul>
          <li>Leaves:
            <strong>{{@game.tree.leafCount}}
              /
              {{@game.tree.rootEnds}}</strong></li>
          <li>Water Stored:
            <strong>{{format-float @game.tree.waterStored}}
              /
              {{@game.tree.waterStorageTotal}}</strong></li>
          <li>Trunk:
            <strong>{{format-float @game.tree.diameter}}m wide x
              {{format-float @game.tree.trunkHeight}}m tall</strong></li>
          <li>Roots:
            <strong>{{@game.tree.rootDepth}}m deep (x
              {{@game.tree.rootEnds}})</strong></li>
        </ul>
      </div>
      <canvas class='water-level'></canvas>
    </div>
  </div>
</div>